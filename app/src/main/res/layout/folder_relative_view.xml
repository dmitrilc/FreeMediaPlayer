<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fullPathPos"
            type="Integer" />

        <variable
            name="bindingAdapterPos"
            type="Integer" />

        <variable
            name="foldersRelativeUiState"
            type="com.dimitrilc.freemediaplayer.ui.state.FoldersRelativeUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView_folder"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:onClick="@{() -> foldersRelativeUiState.onClick.invoke(fullPathPos, bindingAdapterPos)}"
            card_view:cardCornerRadius="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_folderRelativePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{foldersRelativeUiState.path[bindingAdapterPos]}"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:text="Audio" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>