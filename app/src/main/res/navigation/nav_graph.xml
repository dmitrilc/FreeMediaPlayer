<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/music_paths">
    <fragment
        android:id="@id/music_paths"
        android:name="com.example.freemediaplayer.fragments.AudioListFragment"
        android:label="fragment_audio_list"
        tools:layout="@layout/fragment_audio_list" >
        <action
            android:id="@+id/action_music_paths_to_files_path"
            app:destination="@id/files_fragment">
        </action>
    </fragment>
    <fragment
        android:id="@id/video_paths"
        android:name="com.example.freemediaplayer.fragments.VideoListFragment"
        android:label="fragment_video_list"
        tools:layout="@layout/fragment_video_list" />
    <fragment
        android:id="@+id/files_fragment"
        android:name="com.example.freemediaplayer.fragments.FilesFragment"
        android:label="files_fragment"
        tools:layout="@layout/files_fragment" >
        <action
            android:id="@+id/action_filesFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.freemediaplayer.fragments.AudioPlayerFragment"
        android:label="fragment_audio_player"
        tools:layout="@layout/fragment_audio_player" >
        <action
            android:id="@+id/action_audioPlayerFragment_to_playlistFragment"
            app:destination="@id/playlistFragment" />
    </fragment>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.example.freemediaplayer.fragments.PlaylistFragment"
        android:label="PlaylistFragment" />
</navigation>